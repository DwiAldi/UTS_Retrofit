<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tvIdAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Anggota"
            android:textSize="15sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tvNamaAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nama Anggota"
            android:textSize="15sp"
            android:layout_below="@id/tvIdAnggota"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tvAlamatAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="AlamatAnggota"
            android:textSize="15sp"
            android:layout_below="@id/tvNamaAnggota"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tvNomorTeleponAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nomor Telepon Anggota"
            android:textSize="15sp"
            android:layout_below="@id/tvAlamatAnggota"
            android:layout_margin="5dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>