<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/tvIdBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Buku"
            android:textSize="15sp"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tvNamaBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nama Buku"
            android:textSize="15sp"
            android:layout_below="@id/tvIdBuku"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tvPenulisBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Penulis Buku"
            android:textSize="15sp"
            android:layout_below="@id/tvNamaBuku"
            android:layout_margin="5dp"
            />
        <TextView
            android:id="@+id/tvPenerbitBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Penerbit Buku"
            android:textSize="15sp"
            android:layout_below="@id/tvPenulisBuku"
            android:layout_margin="5dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>