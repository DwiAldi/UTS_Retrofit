<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    <TextView
        android:id="@+id/tvIdPeminjaman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ID Peminjaman"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textStyle="bold"
        />
        <TextView
            android:id="@+id/tvIdAnggota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Anggota"
            android:layout_below="@id/tvIdPeminjaman"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tvIdBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Id Buku"
            android:textSize="15sp"
            android:layout_below="@id/tvIdAnggota"
            />
        <TextView
            android:id="@+id/tvTanggalPinjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tanggal Pinjam"
            android:textSize="15sp"
            android:layout_below="@id/tvIdBuku"
            />
        <TextView
            android:id="@+id/tvTanggalKembali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tanggal Kembali"
            android:textSize="15sp"
            android:layout_below="@id/tvTanggalPinjam"
            />
    </RelativeLayout>
    <View
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</LinearLayout>
